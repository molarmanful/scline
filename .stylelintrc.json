{
  "extends": "stylelint-config-recommended",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "apply",
          "config",
          "layer",
          "responsive",
          "screen",
          "tailwind",
          "unocss",
          "variants"
        ]
      }
    ]
  },
  "ignoreFiles": [
    "**/*.js"
  ]
}
